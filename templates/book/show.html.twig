{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
    <h1>Book</h1>

    <table class="table table-striped table-hovredtable">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ book.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ book.title }}</td>
            </tr>
            <tr>
                <th>Isbn</th>
                <td>{{ book.isbn }}</td>
            </tr>
            <tr>
                <th>PublishedAt</th>
                <td>{{ book.publishedAt ? book.publishedAt|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_book_index') }}" class='btn btn-info'>back to list</a>

    <a href="{{ path('app_book_edit', {'id': book.id}) }}" class='btn btn-warning'>edit</a>
    <a href="{{ path('app_book_delete', {'id': book.id}) }}" class='btn btn-danger'>delete</a>

{% endblock %}
