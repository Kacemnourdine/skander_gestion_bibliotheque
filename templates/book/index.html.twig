{% extends 'base.html.twig' %}

{% block title %}Book index{% endblock %}

{% block body %}
    <h1>Book index</h1>

    <table class="table table-striped table-hovred">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Isbn</th>
                <th>Nomber Pages</th>
                <th>PublishedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.id }}</td>
                <td>{{ book.title }}</td>
                <td>{{ book.isbn }}</td>
                <td>{{ book.nbrepage }}</td>
                <td>{{ book.publishedAt ? book.publishedAt|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_book_show', {'id': book.id}) }}" class='btn btn-success'>show</a>
                    <a href="{{ path('app_book_edit', {'id': book.id}) }}" class='btn btn-warning'>edit</a>
                    <a href="{{ path('app_book_delete', {'id': book.id}) }}" class='btn btn-danger'>delete</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<div class="navigation flex justify-center mb-8">
    <ul class="pagination">

        {{ knp_pagination_render(books)}}

    </ul>
</div>
    <a href="{{ path('app_book_new') }}" class="btn btn-primary">Create new</a>
{% endblock %}
