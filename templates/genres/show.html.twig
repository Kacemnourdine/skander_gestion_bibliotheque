{% extends 'base.html.twig' %}

{% block title %}genre{% endblock %}

{% block body %}
    <h1>genre</h1>

    <table class="table table-striped table-hovredtable">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ genre.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ genre.name }}</td>
            </tr>
          
        </tbody>
    </table>

    <a href="{{ path('app_genre_index') }}" class='btn btn-info'>back to list</a>

    <a href="{{ path('app_genre_edit', {'id': genre.id}) }}" class='btn btn-warning'>edit</a>
    <a href="{{ path('app_genre_delete', {'id': genre.id}) }}" class='btn btn-danger'>delete</a>

{% endblock %}
