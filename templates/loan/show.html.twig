{% extends 'base.html.twig' %}

{% block title %}Loan{% endblock %}

{% block body %}
    <h1>Loan</h1>

    <table class="table table-striped table-hovredtable">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ loan.id }}</td>
            </tr>
            <tr>
                <th>BorrowedAt</th>
                <td>{{ loan.borrowedAt ? loan.borrowedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ReturnedAt</th>
                <td>{{ loan.returnedAt ? loan.returnedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_loan_index') }}" class='btn btn-info'>back to list</a>

    <a href="{{ path('app_loan_edit', {'id': loan.id}) }}" class='btn btn-warning'>edit</a>

    <a href="{{ path('app_loan_delete', {'id': loan.id}) }}" class='btn btn-danger'>delete</a>
{% endblock %}
