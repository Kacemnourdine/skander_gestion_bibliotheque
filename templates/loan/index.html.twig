{% extends 'base.html.twig' %}

{% block title %}Loan index{% endblock %}

{% block body %}
    <h1>Loan index</h1>

    <table class="table table-striped table-hovred">
        <thead>
            <tr>
                <th>Id</th>
                <th>BorrowedAt</th>
                <th>ReturnedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for loan in loans %}
            <tr>
                <td>{{ loan.id }}</td>
                <td>{{ loan.borrowedAt ? loan.borrowedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ loan.returnedAt ? loan.returnedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_loan_show', {'id': loan.id}) }}" class='btn btn-success'>show</a>
                    <a href="{{ path('app_loan_edit', {'id': loan.id}) }}" class='btn btn-warning'>edit</a>
                    <a href="{{ path('app_loan_delete', {'id': loan.id}) }}" class='btn btn-danger'>delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_loan_new') }}" class="btn btn-primary">Create new</a>
{% endblock %}
